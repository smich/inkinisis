{
  "name": "ikapp",
  "jest": {
    "verbose": false
  },
  "description": "Inkinisis NodeJs app",
  "author": "Sotiris Michalakos <s.michalakos@gmail.com>",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ttest": "PATH=$(npm bin):$PATH",

    "dev": "run-p dev:prepare dev:run-delayed",
    "dev:prepare": "run-p dev:prepare-server dev:build-client dev:build-server",
    "dev:run-delayed": "run-s dev:delay-server dev:run",

    "dev:delay-server": "node sleep.js",
    "dev:run": "pm2 start ecosystem.config.js --only ${APP}",

    "dev:prepare-server": "universal-webpack --settings ./webpack/universal-webpack-settings.js prepare",
    "dev:build-server": "better-npm-run dev:build-server",
    "dev:build-client": "better-npm-run dev:build-client",

    "test": "jest"
  },
  "betterScripts": {
    "dev:build-client": {
      "command": "webpack-dev-server --hot --inline --config \"./webpack/webpack.config.js\" --host 0.0.0.0 --port 3001 --colors --content-base build/",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev:build-server": {
      "command": "webpack --watch --config \"./webpack/webpack.config.server.babel.js\" --colors --display-error-details",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "prod:build-client": {
      "command": "webpack --config \"./webpack/webpack.config.client.babel.js\" --colors --display-error-details",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "prod:build-server": {
      "command": "webpack --config \"./webpack/webpack.config.server.babel.js\" --colors --display-error-details",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "body-parser": "^1.16.0",
    "bootstrap-sass": "^3.3.7",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.0",
    "font-awesome": "^4.7.0",
    "hbs": "^4.0.1",
    "migrate-orm2": "^2.0.0",
    "morgan": "^1.7.0",
    "orm": "^3.2.3",
    "pg": "^6.1.2",
    "react": "^15.4.2",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "serve-favicon": "^2.3.2",
    "universal-webpack": "^0.2.5",
    "webpack": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "better-npm-run": "0.0.14",
    "css-loader": "^0.26.1",
    "file-loader": "^0.9.0",
    "hbs-utils": "0.0.4",
    "http-proxy": "^1.16.2",
    "jest": "^18.1.0",
    "node-sass": "^4.3.0",
    "npm-run-all": "^4.0.1",
    "postcss-loader": "^1.2.2",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.4.2",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-hot-middleware": "^2.15.0"
  }
}
